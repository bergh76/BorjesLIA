@model BorjesLIA.ViewModel.StartModelViewModel
<!--ajax script-->
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<!--ajax script end-->
<!-- FORMFIELDS START -->
<div class="col-md-4 col-sm-12 col-xs-12 pull-left">
    <div class="x_panel">
        <div class="x_title">
            <h2>Inställningar för Placering</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">

            @using (Html.BeginForm("SetOrderPlacing", "Settings", FormMethod.Post))
            {
                for (int i = 0; i < Model.listVM.Count(); i++)
                {
                    @Html.HiddenFor(model => Model.listVM[i].type)
                    <div class="form-group">
                        <h4 class=""> @Model.listVM[i].name </h4>
                        <p> Nuvarande placering: @Model.listVM[i].orderby (utav totalt: @Model.listVM.Count() ) </p>
                        @Html.EditorFor(model => Model.listVM[i].orderby)
                    </div>

                    <div class="form-group">
                        <p> Aktiv: @Html.CheckBoxFor(model => Model.listVM[i].active)</p>
                    </div>

                    @Html.HiddenFor(model => Model.listVM[i].active)
                    @Html.HiddenFor(model => Model.listVM[i].ID)

                    <div class="x_title"></div>
                }
                <div>

                    <button type="submit" class="btn btn-default pull-right"><i class="glyphicon glyphicon-floppy-save"></i> Spara</button>
                    <button type="button" class="btn btn-default" value="Refresh Page" onClick="window.location.reload()">Avbryt</button>

                </div>
            }

        </div>
    </div>
</div>
<!--List END-->
