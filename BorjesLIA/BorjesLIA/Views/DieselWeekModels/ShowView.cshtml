@model BorjesLIA.ViewModel.DieselWeekViewModel
<!--ajax script-->
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<!--ajax script end-->

<div class="col-md-5 col-sm-12 col-xs-12 pull-left">
    <div class="x_panel">
        <div class="x_title">
            <h2>Lista över veckopriser Diesel</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            @using (Ajax.BeginForm("_AddWeekDiesel", new AjaxOptions { OnSuccess = "OnSuccess" }))
            {
                @Html.AntiForgeryToken()
                <h2>Lägg till ny Veckopris Diesel</h2>
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.AddWeekDiesel.Year, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">

                            @Html.EditorFor(model => model.AddWeekDiesel.Year, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AddWeekDiesel.Year, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.AddWeekDiesel.Week, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">

                            @Html.EditorFor(model => model.AddWeekDiesel.Week, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.AddWeekDiesel.Week, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.AddWeekDiesel.DieselWeekValue, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">

                            @Html.EditorFor(model => model.AddWeekDiesel.DieselWeekValue, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.AddWeekDiesel.DieselWeekValue, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    @*<div class="form-group">
                        @Html.LabelFor(model => model.AddWeekDiesel.User, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">

                            @Html.EditorFor(model => model.AddWeekDiesel.User, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.AddWeekDiesel.User, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.AddWeekDiesel.LoggDate, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">

                            @Html.EditorFor(model => model.AddWeekDiesel.LoggDate, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.AddWeekDiesel.LoggDate, "", new { @class = "text-danger" })

                        </div>
                    </div>*@
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Lägg till" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="col-md-7 col-sm-12 col-xs-12 pull-left">
    <div>
        @Html.Partial("_WeekPriceDiesel", Model)
    </div>
</div>
<div class="col-md-12 col-sm-12 col-xs-12 pull-left">
    
       @{ var dieselWeekChartList = Model.settings.Select(x => x.ChartType).Distinct().ToList();
           var chartID = dieselWeekChartList.FirstOrDefault();
           // create a check if newEuroList is empty
           if (chartID == 0)
           {
            <div class="x_panel">
                <div class="x_title">
                    @Html.Partial("_Error")
                </div>
            </div>
           }
           else
           {
            <div>
                @Html.Partial("_DieselWeekGraph")               
            </div>
               }
           }
</div>
    <!--script using ajax, relode page to show new graph-->
<script type="text/javascript">
    function OnSuccess(response) {
        location.reload();
    }
</script>
