@model BorjesLIA.ViewModel.ImagesViewModel

<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

<body class="nav-md">
    <div class="container-dashboard body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    @Html.Partial("_AdminPanel")
                </div>
            </div>
            <div class="right_col" role="main">
                <div class="row">
                    <!-- Tabel for Images starts here -->
                    <div class="col-md-12 col-sm-12 col-xs-12 pull-left">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2>Images</h2>
                                <ul class="nav navbar-right panel_toolbox">
                                    <li>
                                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                    </li>
                                    <li>
                                        <a class="close-link"><i class="fa fa-close"></i></a>
                                    </li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div class="col-md-4 col-sm-12 col-xs-12">
                                @using (Html.BeginForm("_AddNewImage", "Imgs", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-horizontal">
                                        <h4>Img</h4>
                                        <hr />
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.AddImage.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.AddImage.Name, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.AddImage.Name, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.AddImage.PlacingOrder, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.AddImage.PlacingOrder, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.AddImage.PlacingOrder, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Bild", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                <input type="file" name="file" id="file" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="submit" value="Create" class="btn btn-default" />
                                            </div>
                                        </div>
                                    </div>

                                    @*}*@

                                }
                            </div><!-- img ENDS here -->
                            <div class="col-md-8 col-sm-12 col-xs-12">
                                <!-- Datatable starts here -->
                                <div id="imgList">
                                    @Html.Partial("_ImagesList", Model)
                                    </ div >
                                    <!--Datatable ENDS here -->
                                </div>
                            </div>
                            @*<div class="col-md-12 col-sm-12 col-xs-12">
                                    @Html.Partial("_EuroLineGraph")
                                </div>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
