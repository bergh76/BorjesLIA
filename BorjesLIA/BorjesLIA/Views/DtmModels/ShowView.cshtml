@model BorjesLIA.ViewModel.DMTViewModel
<!--ajax script-->
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<!--ajax script end-->

<!-- FORMFIELDS START -->
<div class="col-md-5 col-sm-12 col-xs-12 pull-left">
    <div class="x_panel">
        <div class="x_title">
            <h2>Lägg till nytt drivmedlestillägg Diesel</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            @using (Ajax.BeginForm("_AddNewDTM", new AjaxOptions { OnSuccess = "OnSuccess" }))
            {
                @Html.AntiForgeryToken()
                <h2></h2>
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.AddDtm.Date, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.AddDtm.Date, DateTime.Now.ToString(), new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AddDtm.Date, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.AddDtm.DieselDTMValue, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.AddDtm.DieselDTMValue, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AddDtm.DieselDTMValue, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.AddDtm.DieselDTMChartID, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.AddDtm.DieselDTMChartID, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AddDtm.DieselDTMChartID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Lägg till" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Create ENDS -->
<!--List-->
<div class="col-md-7 col-sm-12 col-xs-12 pull-left">
    <div>
        @Html.Partial("_DTMList", Model)
    </div>
</div>
<!--List END-->
<!--Graph-->
<div class="col-md-12 col-sm-12 col-xs-12 pull-left">
    @{ var dieselDTMList = Model.newDTMList.Select(x => x.DieselDTMChartID).Distinct().ToList();
            var chartID = dieselDTMList.FirstOrDefault();
            // create a check if newEuroList is empty
            if (chartID == 0)
            {
            <div class="x_panel">
                <div class="x_title">
                    @Html.Partial("_Error")
                </div>
            </div>
        }
        else
        {
            <div>
                @Html.Partial("DtmLineGraph")
            </div>
        }
    }
</div>
<!--Graph END-->

<!--script using ajax, relode page to show new graph-->
<script type="text/javascript">
    function OnSuccess(response) {
        location.reload();
    }
</script>
