@model BorjesLIA.Models.Img.Img

@{
    ViewBag.Title = "Edit";
}
    <div class="container-dashboard body">
    <div class="main_container">
        <div class="col-md-3 left_col">
            <div class="left_col scroll-view">
                @Html.Partial("_AdminPanel")
            </div>
        </div>
        <div class="right_col" role="main">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Editering av data</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <!-- fixa en holder för formen-->
                <div class="col-md-4 col-sm-12 col-xs-12 pull-left">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Ändra data</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li>
                                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li>
                                    <a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <div class="col-md-9">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.ID)
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span>Namn:</span>
                                            <div class="input-group">
                                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group">
                                            <span>Filnamn:</span>
                                            <div class="input-group">
                                                @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group">
                                            <span>Typ:</span>
                                            <div class="input-group">
                                                @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group">
                                            <span>Sorteringsindex:</span>
                                            <div class="input-group">
                                                @Html.EditorFor(model => model.PlacingOrder, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.PlacingOrder, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group">
                                                Aktiv: @Html.CheckBoxFor(model => model.Active, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Active, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group">
                                            <span>Datum:</span>
                                            <div class="input-group">
                                                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group">
                                            <button type="submit" class="btn submit-button" value="Upload">Spara</button> | @Html.ActionLink("Tillbaka", "Index")
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <!-- Fixa en form för bilden -->
                <div class="col-md-8 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Bild @Model.Name</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="embed-responsive embed-responsive-16by9">
                            <div class="item-responsive" style="background-image: url(/Images/UploadedImg/@Model.Url);"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>