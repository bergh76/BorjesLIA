@model BorjesLIA.ViewModel.DieselQuarterViewModel
<!--ajax script-->
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<!--ajax script end-->
<!-- FORMFIELDS START -->
<div class="col-md-4 col-sm-12 col-xs-12 pull-left">
    <div class="x_panel">
        <div class="x_title">
            <h2>Inställningar för graf kvartalspris diesel</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            @using (Ajax.BeginForm("SaveDQSettings", new AjaxOptions { OnSuccess = "OnSuccess" })) //använder onSuccess ist UpdateTargetId = "update", ger betydligt mer laddtid.
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="dropdown">
                        <h4>Välj Diagramtyp</h4>
                        @Html.EnumDropDownListFor(model => model.ChartType, new { @class = "btn btn-default dropdown-toggle " })
                        @Html.ValidationMessageFor(model => model.ChartType, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="dropdown">
                        <h4>Välj År</h4><span><small>Håll inne shift för att välja fler än ett år</small></span>
                        @Html.ListBoxFor(model => model.newQuarterDieselList, new MultiSelectList(Model.newQuarterDieselList.OrderBy(x => x.Year).Select(x => x.Year).Distinct()), new { @class = "list-group-item" })
                        @Html.ValidationMessageFor(model => model.AddQuarterDiesel.Year, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div>
                    <div class="form-group">
                        <div class="btn-block">
                            <button type="submit" onclick="window.location.reload()" class="btn btn-default pull-right"><i class="glyphicon glyphicon-floppy-save"></i> Spara</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>



<!--List END-->
<!--Graph-->
<div class="col-md-8 col-sm-12 col-xs-12">
    <div>
        @Html.Partial("_DieselQuarterNewGraph")
    </div>
</div>


