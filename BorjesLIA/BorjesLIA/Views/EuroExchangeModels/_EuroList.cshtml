@model BorjesLIA.ViewModel.EuroViewModel
<script type="text/javascript">
    $(document).ready(function(){
        $('#myTable').DataTable({
            //dom: 'B<"clear"><lf<t>ip>',
            "language": {
                "lengthMenu": "Visa _MENU_ rader per sida",
                "zeroRecords": "Din sökning gav inget - försök med att annat sökord",
                "info": "Visar nu _PAGE_ av _PAGES_",
                "infoEmpty": "Datatabellen är tom",
                "infoFiltered": "(filtrerdad på _MAX_ antal poster)"
            },
            "processing": true,
            "order": [[0, "desc", ]], //Column1  
        })        
       
        var table = $('#myTable').DataTable();
        new $.fn.dataTable.Buttons(table, {
            buttons: [
                { extend: 'copy', text: 'Kopiera', },
                { extend: 'excel', text: 'Excel', },
                'pdf'],
        });
        table.buttons().container()
            .appendTo($('.col-sm-6:eq(0)', table.table().container()));
    });

</script>

<div class="x_panel">
    <div class="x_title">
        <h2>Euroindex <small>- värde euro</small></h2>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
            <li>
                <a class="close-link"><i class="fa fa-close"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <div id="datatable-buttons_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
            <table id="myTable" class="table table-striped dt-responsive nowrap dataTable no-footer dtr-inline collapsed" role="grid" aria-describedby="datatable-buttons_info">
                <thead>
                    <tr>
                        <th>
                            År
                        </th>
                        <th>
                            Månad
                        </th>
                        <th>
                            Pris
                        </th>
                        <th>
                            Edit
                        </th>
                    </tr>
                </thead>
                @foreach (var item in Model.newEuroList)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Year)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Month)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.euroValue)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

