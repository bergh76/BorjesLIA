@model BorjesLIA.ViewModel.StartModelViewModel
<!--ajax script-->
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<!--ajax script end-->
<!-- FORMFIELDS START -->
<script type="text/javascript">
    $(document).ready(function(){
        $('#myTable').DataTable({
            "order": [[3, "asc"]],
            "language": {
                "lengthMenu": "Visa _MENU_ rader per sida",
                "zeroRecords": "Din sökning gav inget - försök med att annat sökord",
                "info": "Visar nu _PAGE_ av _PAGES_",
                "infoEmpty": "Datatabellen är tom",
                "infoFiltered": "(filtrerdad på _MAX_ antal poster)"
            },
            "processing": true,
        });
    });
</script>
<div class="col-md-12 col-sm-12 col-xs-12 pull-left">
    <div class="x_panel">
        <div class="x_title">
            <h2>Inställningar för Placering</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
       <div class="x_content">
                           @using (Html.BeginForm("SetOrderPlacing", "Settings", FormMethod.Post))
                    {
                        <table id="myTable" class="table table-striped dt-responsive nowrap dataTable no-footer dtr-inline collapsed" role="grid" aria-describedby="datatable-buttons_info">
                            <thead>
                                <tr>
                                    <th>
                                        ID
                                    </th>
                                    <th>
                                        Typ
                                    </th>
                                    <th>
                                        Namn
                                    </th>
                                    <th>
                                        Sortering
                                    </th>
                                    <th>
                                        Ny Sortering
                                    </th>
                                   
                                    
                                    <th>
                                        Aktiv (Ja/Nej)
                                    </th>
                                    <th>
                                        Spara
                                    </th>
                                </tr>
                            </thead>
                            @{ int counter = 1; }
                            @for (int i = 0; i < Model.listVM.Count(); i++)
                        {
                            var temp = i;
                            var rId = counter + temp;
                                <tr>
                                    <td>
                                        @rId @Html.HiddenFor(model => Model.listVM[i].ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => Model.listVM[i].TypeName) @Html.HiddenFor(model => Model.listVM[i].Type)
                                    </td>
                                    <td>
                                        @Model.listVM[i].ObjectName
                                    </td>
                                    <td>
                                        @Model.listVM[i].SortIndex
                                    </td>
                                    <td>
                                        @Html.EditorFor(model => Model.listVM[i].SortIndex,new { type="file", @class="input-file" })
                                    </td>
                                   

                                    <td style="text-align: center">
                                        @Html.CheckBoxFor(model => Model.listVM[i].Active) @Html.HiddenFor(model => Model.listVM[i].Active)
                                    </td>
                                    <td><button type="submit" class="btn btn-default btn-sm"><i class="glyphicon glyphicon-floppy-save"></i> Spara</button></td>
                                </tr>
                            }

                        </table>
                                }
                </div>
            </div>
        </div>

                       

