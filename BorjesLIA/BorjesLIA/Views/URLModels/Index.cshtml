@model BorjesLIA.ViewModel.URLViewModel
<!--ajax script-->
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<!--ajax script end-->

<div class="container-dashboard body">
    <div class="main_container">
        <div class="col-md-3 left_col">
            <div class="left_col scroll-view">
                @Html.Partial("_AdminPanel")
            </div>
        </div>
        <div class="right_col" role="main">
            <div class="row">
                <!-- Tabel for Images starts here -->
                <div class="col-md-12 col-sm-12 col-xs-12 pull-left">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>URL</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li>
                                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li>
                                    <a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="col-md-4 col-sm-12 col-xs-12">
                            <!--Partial view for form adding new Image-->
                            @using (Ajax.BeginForm("_AddUrl", new AjaxOptions { UpdateTargetId = "urlList" }))
                            {
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                
                                <div class="x_content">
                                    @Html.AntiForgeryToken()
                                    <div class="x_panel">
                                        <div class="x_title">
                                            <h2>Lägg till ny url</h2>
                                            <ul class="nav navbar-right panel_toolbox">
                                                <li>
                                                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                                </li>
                                                <li>
                                                    <a class="close-link"><i class="fa fa-close"></i></a>
                                                </li>
                                            </ul>
                                            <div class="clearfix"></div>
                                        </div>
                                        <div class="x_content">
                                            <div class="form-horizontal">

                                                <div class="form-group">
                                                    <div class="input-group date">
                                                        <p>Välj datum </p>
                                                        <div class="input-group input-append date" id="dateRangePicker">
                                                            <input class="form-control" name="date" readonly />
                                                            <span class="input-group-addon add-on"><i class="fa fa-calendar"></i></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="input-group date">
                                                        <p>Lägg till webbadress</p>
                                                        <div class="input-group">
                                                            @Html.EditorFor(model => model.AddUrl.urlString, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.AddUrl.urlString, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <div class="input-group date">
                                                        <input type="submit" value="Lägg till" class="btn btn-default pull-right" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div><!-- img ENDS here -->
                        <div class="col-md-8 col-sm-12 col-xs-12">
                            <!-- Datatable starts here -->
                            <div id="urlList">
                                @Html.Partial("_UrlList", Model)
                            </div>
                            <!--Datatable ENDS here -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>